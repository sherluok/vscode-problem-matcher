// https://github.com/connor4312/esbuild-problem-matchers/blob/main/package.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "launch",
      "type": "chrome",
      "startingPage": "http://localhost:8080",
      "switches": {
        "--remote-debugging-port": 9230
      },
      "isBackground": true
    },
    {
      "label": "launch more options",
      "type": "chrome",
      "executable": "",
      "switches": {
        "--remote-debugging-port": 9230,
        "--user-data-dir": "${workspaceFolder}/cache/chrome-user-data-dir-9230",
        "--auto-open-devtools-for-tabs": true,
        "--app": "http://localhost:8080",
        "--window-size": [
          800,
          600
        ]
      },
      "isBackground": true
    },
    {
      "label": "launch more options",
      "type": "chrome",
      "executable": "",
      "switches": {
        "--remote-debugging-port": 9230,
        "--user-data-dir": "${workspaceFolder}/cache/chrome-user-data-dir-9230",
        "--auto-open-devtools-for-tabs": true,
        "--app": "http://localhost:8080",
        "--window-size": [
          800,
          600
        ]
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
