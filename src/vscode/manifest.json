{
  "publisher": "sherluok",
  "name": "problem-matcher",
  "displayName": "Problem Matchers",
  "description": "Tasks and Problem Matchers for chrome, esbuild, wrangler...",
  "license": "MIT",
  "main": "main.js",
  "icon": "icon.png",
  "activationEvents": [
    "onTaskType:chrome"
  ],
  "contributes": {
    "taskDefinitions": [
      {
        "type": "chrome",
        "properties": {
          "executable": {
            "type": "string",
            "description": "Chrome executable file path, if omitted it will be automatically found on your system."
          },
          "userDataDir": {
            "type": "string",
            "description": "Chrome flag --user-data-dir, defaults to ${os.tmpdir()}/chrome-user-data-dir-${remoteDebuggingPort}"
          },
          "remoteDebuggingPort": {
            "type": "number",
            "description": "Chrome flag --remote-debugging-port"
          },
          "startingPage": {
            "type": "string",
            "description": "Default page to load when Chrome open"
          }
        },
        "required": [
          "remoteDebuggingPort"
        ]
      }
    ],
    "problemPatterns": [],
    "problemMatchers": [
      {
        "name": "common",
        "label": "common problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "esbuild",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^vscode background task begins"
          },
          "endsPattern": {
            "regexp": "^vscode background task ends"
          }
        }
      },
      {
        "name": "esbuild",
        "label": "esbuild problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "esbuild",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      },
      {
        "name": "esbuild-watch",
        "label": "esbuild --watch problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "esbuild",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "\\[watch\\] build started"
          },
          "endsPattern": {
            "regexp": "\\[watch\\] build finished"
          }
        }
      },
      {
        "name": "wrangler-dev",
        "label": "wrangler dev problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "wrangler",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {6})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Reloading local server"
          },
          "endsPattern": {
            "regexp": "Local server ready"
          }
        }
      }
    ]
  }
}
