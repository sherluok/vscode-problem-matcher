{
  "name": "problem-matcher",
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9",
    "vscode": "^1.100.2"
  },
  "publisher": "sherluok",
  "displayName": "Problem Matchers",
  "description": "Problem matchers for esbuild, wrangler...",
  "license": "MIT",
  "icon": "./media/icon.png",
  "scripts": {
    "pkg": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sherluok/vscode-problem-matcher"
  },
  "homepage": "https://github.com/sherluok/vscode-problem-matcher",
  "devDependencies": {
    "@vscode/vsce": "^3.6.0"
  },
  "contributes": {
    "problemMatchers": [
      {
        "name": "esbuild",
        "label": "esbuild problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "esbuild",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      },
      {
        "name": "esbuild-watch",
        "label": "esbuild --watch problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "esbuild",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "\\[watch\\] build started"
          },
          "endsPattern": {
            "regexp": "\\[watch\\] build finished"
          }
        }
      },
      {
        "name": "wrangler-dev",
        "label": "wrangler dev problem matcher",
        "severity": "error",
        "applyTo": "closedDocuments",
        "source": "wrangler",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^X \\[([A-Z]+)\\] (.+)",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^(?:\\t| {6})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Reloading local server"
          },
          "endsPattern": {
            "regexp": "Local server ready"
          }
        }
      }
    ]
  }
}
